<h1>Listing links</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Link</th>
      <th>Title</th>
      <th>Mashup</th>
      <th>Source link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.value %></td>
        <td><%= link.link %></td>
        <td><%= link.title %></td>
        <td><%= link.mashup %></td>
        <td><%= link.source_link %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
